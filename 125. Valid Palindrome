class Solution {
    public boolean isPalindrome(String s) {
        s = s.replaceAll("[^a-zA-Z0-9]", "");
        s = s.toLowerCase();
        //System.out.println(s);
        StringBuffer sb = new StringBuffer(s);
        sb.reverse();
        //System.out.println(sb);
        if (s.equals(sb.toString())) {
            return true;
        }else{
            return false;
        } 
    }
}
